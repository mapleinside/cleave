{
  "name": "cleave",
  "description": "[UNMAINTAINED] Strike your monorepo with an only-modified package sweeping build",
  "version": "1.0.2",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.12.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1"
  },
  "bin": "./bin/cleave.js",
  "scripts": {
    "lint": "eslint ./ --config ./package.json --ignore-path ./.eslintignore"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "max-len": [
        2,
        100,
        4,
        {
          "ignorePattern": "\\s*<"
        }
      ]
    },
    "globals": {
      "document": true,
      "window": true,
      "navigator": true,
      "URL": true,
      "fetch": true,
      "describe": true,
      "it": true,
      "felfire": true
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": true,
          "regenerator": true
        }
      ]
    ]
  },
  "dependencies": {
    "@nicolascava/felfire-run": "^1.0.0",
    "commander": "^2.15.1",
    "lodash": "^4.17.5",
    "winston": "^3.0.0-rc4"
  }
}
